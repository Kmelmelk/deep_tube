{% extends 'base.html.twig' %}

{% block title %}Hello SingleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

</div>
    <div class="container">
        <div class="row">
        {% for musique in musiques %}
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="{{ musique.url }}"></iframe>
                    <div class="card-body">
                        <h5 class="card-title">{{musique.auteur}} - {{musique.titre}}</h5>
                        <a href="{{ path('home_remove' , {'id' : musique.id}) }}"> <button class="btn btn-primary"><i class="fa fa-play"></i> Ecouter</button></a>
                        <a href="{{ path('home_remove' , {'id' : musique.id}) }}"> <button class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</button></a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}
