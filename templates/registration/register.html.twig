{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
    <div class="col-5" style="margin-left: 250px">
        <h1>S'inscrire</h1>

        {{ form_start(registrationForm,{'attr' : {'class ' : ' form-group'}}) }}
        {{ form_row(registrationForm.nom,{'attr' : {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.prenom,{'attr' : {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.codePostal,{'attr' : {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.telephone,{'attr' : {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.email,{'attr' : {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword,{'attr' : {'class': 'form-control'}}) }}


        <button class="btn btn-primary">Confirmer</button>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
